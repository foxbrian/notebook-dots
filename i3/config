#toggle mute
bindsym XF86AudioMute exec --no-startup-id pamedia mute
#increase volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pamedia up
#decrease sound
bindsym XF86AudioLowerVolume exec --no-startup-id pamedia down
#mpris next
bindsym XF86AudioNext exec --no-startup-id playerctl next
#mpris prev
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
#mpris play/pause
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
#backlight decrease
bindsym XF86MonBrightnessDown exec --no-startup-id backlight dec
#backlight increase
bindsym XF86MonBrightnessUp exec --no-startup-id backlight inc
